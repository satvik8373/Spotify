{
  "name": "Spotify x Mavrix",
  "short_name": "Spotify x Mavrix",
  "description": "A premium Spotify experience with real-time features and enhanced music discovery",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#121212",
  "theme_color": "#1DB954",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "/spotify-icon-192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any"
    },
    {
      "src": "/spotify-icon-512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any"
    },
    {
      "src": "/spotify-icon-maskable-192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "maskable"
    },
    {
      "src": "/spotify-icon-maskable-512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Liked Songs",
      "short_name": "Liked",
      "description": "View your liked songs",
      "url": "/liked-songs",
      "icons": [
        {
          "src": "/shortcut-liked-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Search",
      "short_name": "Search",
      "description": "Search for music",
      "url": "/search",
      "icons": [
        {
          "src": "/shortcut-search-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-home.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshot-desktop.png",
      "type": "image/png",
      "sizes": "1920x1080",
      "form_factor": "wide"
    }
  ],
  "automotive": {
    "media_capabilities": {
      "action_types": ["play", "pause", "seekto", "seekforward", "seekbackward", "previoustrack", "nexttrack"],
      "presentation_metadata": ["title", "artist", "artwork", "album", "duration", "position"]
    },
    "auto_resume": true,
    "requires_car_mode": false,
    "requires_automotive_permission": true
  },
  "automotive_media_bundle": {
    "android_auto": true,
    "carplay": true
  },
  "related_applications": [
    {
      "platform": "chromeos_play",
      "url": "https://play.google.com/store/apps/details?id=com.android.chrome",
      "id": "com.mavrix.spotify"
    },
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.android.chrome",
      "id": "com.mavrix.spotify"
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "browser", "car"]
} 